<%- include('partials/header') -%>



    <div class="vh-100 d-flex justify-content-center align-items-center">
      <div class="container">
        <div class="row d-flex justify-content-center">
          <div class="col-12 col-md-8 col-lg-6">
            <div class="card bg-white">
              <div class="card-body p-5">
                <% if (locals.messages.errors) { %>
                  <% messages.errors.forEach( el => { %>
                      <div class="alert alert-danger"><%= el.msg %></div>
                  <% }) %>    
              <% } %>
              <% if (locals.messages.info) { %>
                  <% messages.info.forEach( el => { %>
                      <div class="alert alert-info"><%= el.msg %></div>
                  <% }) %>    
              <% } %>
                <form class="mb-3 mt-md-4" action="/signup" method="POST">
                  <h2 class="fw-bold mb-2 text-uppercase ">Daily Grind Cafe</h2>
                  <p class=" mb-5">Please create your account here</p>
                  <div class="mb-3">
                    <label style="color: black;" for="userName" class="form-label">Barista Name</label>
                    <input type="text" class="form-control" id="userName" name="userName">
                  </div>
                <div class="mb-3">
                  <label style="color: black;" for="exampleInputEmail1" class="form-label">Email address</label>
                  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                  <div style="color: black;" id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                  <label style="color: black;" for="password" class="form-label">Password</label>
                  <input type="password" class="form-control" id="password" name="password">
                </div>
                <div class="mb-3">
                    <label style="color: black;" for="confirmPassword" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                  </div>

                  <div class="d-grid">
                    <button class="btn btn-outline-dark" type="submit">Sign Up</button>
                  </div>
                </form>

                <div>
                  <p class="mb-0  text-center">Have an account? <a href="/login" class="text-primary fw-bold">Login
                      </a></p>
                </div>
    
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

<%- include('partials/footer') -%>